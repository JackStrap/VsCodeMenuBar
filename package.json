{
  "name": "somemenubar",
  "displayName": "Some Menu Bar",
  "description": "A sort of toolbar, add items to the menu bar.",
  "version": "0.0.7",
  "publisher": "JackStrap",
  "author": {
    "name": "Jack Strapopoulos"
  },
  "engines": {
    "vscode": "^1.58.0"
  },
  "icon": "images/HomerSlayer.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/JackStrap/VsCodeMenuBar.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.save",
    "onCommand:extension.saveAll",
    "onCommand:extension.beautify",
    "onCommand:extension.lineComment",
    "onCommand:extension.blockComment",
    "onCommand:extension.toggleTerminal"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.save",
        "title": "Save",
        "category": "menubar",
        "icon": {
          "light": "images/save_light.svg",
          "dark": "images/save.svg"
        }
      },
      {
        "command": "extension.saveAll",
        "title": "Save all",
        "category": "menubar",
        "icon": {
          "light": "images/saveAll_light.svg",
          "dark": "images/saveAll.svg"
        }
      },
      {
        "command": "extension.beautify",
        "title": "Beautify",
        "category": "menubar",
        "icon": {
          "light": "images/format_light.svg",
          "dark": "images/format.svg"
        }
      },
      {
        "command": "extension.lineComment",
        "title": "Toggle Line Comment",
        "category": "menubar",
        "icon": {
          "light": "images/commentLine_light.svg",
          "dark": "images/commentLine.svg"
        }
      },
      {
        "command": "extension.blockComment",
        "title": "Toggle Block Comment",
        "category": "menubar",
        "icon": {
          "light": "images/commentBlock_light.svg",
          "dark": "images/commentBlock.svg"
        }
      },
      {
        "command": "extension.toggleTerminal",
        "title": "Toggle terminal",
        "category": "menubar",
        "icon": {
          "light": "images/terminal_light.svg",
          "dark": "images/terminal.svg"
        }
      }
    ],
    "configuration": [
      {
        "title": "vsCode Menu Bar configuration",
        "properties": {
          "extension.save": {
            "type": "boolean",
            "default": true,
            "description": "show icon for save active file"
          },
          "extension.saveAll": {
            "type": "boolean",
            "default": true,
            "description": "show icon to save all active files"
          },
          "extension.beautify": {
            "type": "boolean",
            "default": true,
            "description": "show icon for beautify active file"
          },
          "extension.lineComment": {
            "type": "boolean",
            "default": true,
            "description": "show icon for toggle line comment"
          },
          "extension.blockComment": {
            "type": "boolean",
            "default": true,
            "description": "show icon for toggle block comment"
          },
          "extension.toggleTerminal": {
            "type": "boolean",
            "default": false,
            "description": "show icon for toggle terminal"
          }
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "!isInDiffEditor && !markdownPreviewFocus && config.extension.save",
          "command": "extension.save",
          "group": "navigation@1"
        },
        {
          "when": "!isInDiffEditor && !markdownPreviewFocus && config.extension.saveAll",
          "command": "extension.saveAll",
          "group": "navigation@2"
        },
        {
          "when": "!isInDiffEditor && !markdownPreviewFocus && config.extension.beautify",
          "command": "extension.beautify",
          "group": "navigation@3"
        },
        {
          "when": "config.extension.lineComment",
          "command": "extension.lineComment",
          "group": "navigation@4"
        },
        {
          "when": "config.extension.blockComment",
          "command": "extension.blockComment",
          "group": "navigation@5"
        },
        {
          "when": "config.extension.toggleTerminal",
          "command": "extension.toggleTerminal",
          "group": "navigation@6"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.58.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
